<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="sandbox">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:postgres://localhost:5432/app_database"/>
            <property name="eclipselink.jdbc.driver" value="org.postgres.Driver"/>
            <property name="eclipselink.jdbc.user" value="app_user"/>
            <property name="eclipselink.jdbc.password" value="app_password"/>
        </properties>
    </persistence-unit>
</persistence>
